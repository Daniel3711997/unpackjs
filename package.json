{
    "private": true,
    "name": "unpackjs",
    "version": "0.1.0",
    "description": "Lorem Ipsum is simply dummy text of the printing and typesetting industry",
    "scripts": {
        "release": "release-it",
        "prepare": "husky install",
        "prebuild": "npm run check-php",
        "vanilla-start": "encore dev-server",
        "prestart": "composer dump-autoload",
        "build": "tsc && npm run build-application",
        "clear": "node ./scripts/_clearWorkspace.js",
        "update-db": "npx update-browserslist-db@latest",
        "postbuild-action": "node ./scripts/_postbuild.js",
        "build-action": "tsc && npm run build-application",
        "configure-development": "npm install && composer install",
        "postconfigure-production": "node ./scripts/_postconfigure.js",
        "postconfigure-development": "node ./scripts/_postconfigure.js",
        "enable-swc": "cross-env SWC=true node ./scripts/_SWCAppLoader.js",
        "disable-swc": "cross-env SWC=false node ./scripts/_SWCAppLoader.js",
        "check-php": "./vendor/bin/phpcs app --standard=.php-style.xml --cache",
        "postbuild": "composer dump-autoload --optimize && node ./scripts/_postbuild.js",
        "configure-production": "npm ci && composer install --no-interaction --optimize-autoloader",
        "start": "concurrently -r -k \"typed-scss-modules \\\"**/*.module.scss\\\" -L silent -n none -e default -w -o __generated__\" \"encore dev-server\"",
        "build-application": "npx cspell --no-progress \"{app,src}/**/*.{php,js,jsx,ts,tsx,css,scss}\" --cache --cache-strategy metadata --cache-location \"cache/tools/cspell\" && encore production"
    },
    "sideEffects": [
        "*.css",
        "*.scss"
    ],
    "lint-staged": {
        "**/*.php": [
            "./vendor/bin/phpcs --standard=.php-style.xml --cache"
        ],
        "**/*.{js,jsx,ts,tsx}": [
            "npx eslint --cache --cache-strategy metadata --cache-location \"cache/eslint/\""
        ],
        "**/*.{css,scss}": [
            "npx stylelint --cache --cache-strategy metadata --cache-location \"cache/stylelint/\""
        ],
        "**/*.{js,jsx,ts,tsx,json,css,scss}": [
            "npx prettier --write --cache --cache-strategy metadata --cache-location \"cache/tools/prettier\""
        ],
        "{app,src}/**/*.{php,js,jsx,ts,tsx,css,scss}": [
            "npx cspell --no-progress --cache --cache-strategy metadata --cache-location \"cache/tools/cspell\""
        ]
    },
    "browserslist": {
        "production": [
            "chrome 64",
            "edge 79",
            "firefox 67",
            "opera 51",
            "safari 12"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version"
        ]
    },
    "engines": {
        "npm": ">=9.0.0",
        "node": ">=18.0.0"
    },
    "includeNodeModules": [
        "@tanstack/query-core",
        "@tanstack/react-query"
    ],
    "overrides": {
        "css-modules-loader-core": {
            "postcss": "^7.0.39"
        },
        "@symfony/webpack-encore": {
            "typescript": "^5.0.0",
            "eslint-webpack-plugin": "^4.0.0",
            "css-minimizer-webpack-plugin": "^5.0.0",
            "fork-ts-checker-webpack-plugin": "^8.0.0"
        }
    },
    "dependencies": {
        "@babel/runtime": "^7.21.0",
        "@loadable/component": "^5.15.3",
        "@tanstack/react-query": "^4.29.1",
        "clsx": "^1.2.1",
        "final-form": "^4.20.9",
        "immer": "^9.0.21",
        "jquery": "^3.6.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-error-boundary": "^4.0.3",
        "react-final-form": "^6.5.9",
        "tslib": "^2.5.0",
        "zod": "^3.21.4"
    },
    "devDependencies": {
        "@babel/core": "^7.21.4",
        "@babel/plugin-transform-runtime": "^7.21.4",
        "@babel/preset-env": "^7.21.4",
        "@babel/preset-react": "^7.18.6",
        "@babel/preset-typescript": "^7.21.4",
        "@commitlint/cli": "^17.5.1",
        "@commitlint/config-conventional": "^17.4.4",
        "@fullhuman/postcss-purgecss": "^5.0.0",
        "@pmmmwh/react-refresh-webpack-plugin": "^0.5.10",
        "@release-it/conventional-changelog": "^5.1.1",
        "@swc/core": "^1.3.49",
        "@swc/helpers": "^0.5.0",
        "@swc/plugin-transform-imports": "^1.5.59",
        "@symfony/webpack-encore": "^4.2.0",
        "@tanstack/eslint-plugin-query": "^4.29.0",
        "@types/jquery": "^3.5.16",
        "@types/loadable__component": "^5.13.4",
        "@types/node": "^18.15.11",
        "@types/react": "^18.0.34",
        "@types/react-dom": "^18.0.11",
        "@types/webpack-env": "^1.18.0",
        "@typescript-eslint/eslint-plugin": "^5.58.0",
        "@typescript-eslint/parser": "^5.58.0",
        "babel-plugin-transform-imports": "^2.0.0",
        "chalk": "^4.1.2",
        "compression-webpack-plugin": "^10.0.0",
        "concurrently": "^8.0.1",
        "core-js": "^3.30.0",
        "cross-env": "^7.0.3",
        "cspell": "^6.31.1",
        "dotenv-webpack": "^8.0.1",
        "esbuild": "^0.17.16",
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-n": "^15.7.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-sort-exports": "^0.8.0",
        "eslint-webpack-plugin": "^4.0.1",
        "fork-ts-checker-webpack-plugin": "^8.0.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.1",
        "mini-css-extract-plugin": "^2.7.5",
        "node-ssh": "^13.1.0",
        "postcss": "^8.4.21",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-loader": "^7.2.4",
        "postcss-logical": "^6.1.0",
        "postcss-preset-env": "^8.3.1",
        "prettier": "^2.8.7",
        "purgecss-with-wordpress": "^5.0.0",
        "react-refresh": "^0.14.0",
        "release-it": "^15.10.1",
        "sass": "^1.61.0",
        "sass-loader": "^13.2.2",
        "stylelint": "^15.4.0",
        "stylelint-config-clean-order": "^5.0.1",
        "stylelint-config-sass-guidelines": "^10.0.0",
        "stylelint-webpack-plugin": "^4.1.1",
        "swc-loader": "^0.2.3",
        "ts-loader": "^9.4.2",
        "tsconfig-paths-webpack-plugin": "^4.0.1",
        "typed-scss-modules": "^7.1.0",
        "typescript": "^5.0.4",
        "webpack": "^5.78.0",
        "webpack-bundle-analyzer": "^4.8.0",
        "webpack-cli": "^5.0.1",
        "webpackbar": "^5.0.2"
    }
}
