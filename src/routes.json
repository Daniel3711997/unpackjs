{
    "$schema": "schema.json",
    "routes": [
        {
            "app": "vanilla",
            "entry": {
                "name": "vanilla",
                "path": "src/vanilla/index.ts"
            },
            "tests": [
                {
                    "function": "__return_true"
                }
            ]
        },
        {
            "app": "react",
            "tests": [
                {
                    "function": "is_page_template",
                    "arguments": ["unpack-template.php"]
                }
            ],
            "entry": {
                "name": "profile",
                "path": "src/app/containers/Profile/index.ts"
            }
        },
        {
            "app": "react",
            "server": {
                "key": "profile",
                "method": "getUserProfileData"
            },
            "entry": {
                "name": "home",
                "path": "src/app/containers/Home/index.ts"
            },
            "tests": [
                {
                    "arguments": [5],
                    "function": "is_single"
                }
            ],
            "rewrites": [
                {
                    "after": "top",
                    "queryVars": ["profile-id"],
                    "regex": "^profile/([0-9]+)/?$",
                    "query": "index.php?pagename=profile&profile-id=$matches[1]"
                }
            ]
        }
    ]
}
